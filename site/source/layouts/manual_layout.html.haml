= wrap_layout :layout do

  .shutup(style='display:none')
    = content_for :javascript do
      = javascript_include_tag "manual"

  .howl-theme-selector(style='display:none')
    .dropdown
      %button#themeLabel.btn.btn-default.btn-sm(type='button' data-toggle="dropdown")
        Select theme for pictures..
        %span.caret
      %ul.dropdown-menu(role='menu' aria-labelledby="themeLabel")
        - howl_themes.each do |key, name|
          %li(role='presentation')
            %a.set-howl-theme{role: 'menuitem', href: '#', data: {key: key}}
              = name

  = yield
