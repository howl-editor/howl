!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="")
    %meta(name="author" content="Nils Nordman")
    %link(rel="shortcut icon" href="/images/howl.png")

    %title= "Howl :: #{current_page.data.title || 'Editor'}"

    = stylesheet_link_tag "bootstrap.min", "syntax", "howl"
    %link(href='//fonts.googleapis.com/css?family=Josefin+Slab' rel='stylesheet' type='text/css')
    %link(href='//fonts.googleapis.com/css?family=Open+Sans+Condensed:700' rel='stylesheet' type='text/css')

  %body(class="#{page_classes}")
    .container
      .masthead
        %ul.nav.nav-pills
          %li
            %a(href="/")
              %span.glyphicon.glyphicon-home
              Home
          %li
            %a(href="/doc/")
              %span.glyphicon.glyphicon-book
              Documentation
          %li
            %a(href="/blog/")
              %span.glyphicon.glyphicon-bullhorn
              Blog

          %li
            %a(href="/contact.html")
              %span.glyphicon.glyphicon-inbox
              Contact


      = breadcrumbs

      = preserve yield

      .footer.text-muted
        %a(href="/")
          = image_tag "howl.png", width: "50", height: "50", class: 'footer-logo'
        .footer-follow
          %p
            %a.twitter-follow-button(href="https://twitter.com/howleditor"
                                     data-show-count="false" data-lang="en"
                                     rel="me")
              Follow @howleditor

          %p
            %a.twitter-share-button(href="https://twitter.com/share"
                                    data-lang="en"
                                    data-url="http://howl.io"
                                    data-hashtags="howleditor"
                                    data-count="none"
                                    data-text="The Howl Editor, a general purpose, light-weight customizable editor." )
              Tweet
        .footer-blurb
          %div The Howl editor.
          %div
            Copyright 2012-2015
            %a.alert-link(href='https://github.com/howl-editor/howl/contributors')
              The Howl Developers.

    %script
      // GA
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-45283282-1', 'howl.io');
      ga('send', 'pageview');

      // Twitter
      !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];
      if(!d.getElementById(id)){js=d.createElement(s);js.id=id;
      js.src="//platform.twitter.com/widgets.js";
      fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
